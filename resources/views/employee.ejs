
<section class="bg-gray-100 p-8">
  <div class="max-w-md mx-auto bg-white rounded p-6">
    <h1 class="text-2xl font-bold mb-6">Employee Form</h1>
    <form action="/employeeinfo" method="post">

      <div class="flex">
        <div class="mb-4">
            <label for="firstname" class="block text-sm font-medium text-gray-600">First Name:</label>
            <input type="text" name="firstname" class="mt-1 p-2 border rounded w-full" required>
          </div>
    
          <div class="mb-4 ml-4">
            <label for="lastname" class="block text-sm font-medium text-gray-600">Last Name:</label>
            <input type="text" name="lastname" class="mt-1 p-2 border rounded w-full" required>
          </div>
      </div>

      <div class="flex">
        <div class="mb-4">
          <label for="age" class="block text-sm font-medium text-gray-600">Age:</label>
          <input type="number" name="age" class="mt-1 p-2 border rounded w-full" required>
        </div>
  
        <div class="mb-4 ml-4">
          <label for="dob" class="block text-sm font-medium text-gray-600">Date of Birth:</label>
          <input type="date" name="dob" class="mt-1 p-2 border rounded w-full" required>
        </div>
      </div>

      <div class="flex">
        <div class="mb-4">
          <label for="address" class="block text-sm font-medium text-gray-600">Address:</label>
          <input type="text" name="address" class="mt-1 p-2 border rounded w-full" required>
        </div>
  
        <div class="mb-4 ml-4">
          <label for="phone" class="block text-sm font-medium text-gray-600">Phone Number:</label>
          <input type="tel" name="phone" class="mt-1 p-2 border rounded w-full" required>
        </div>
      </div>

      <button type="submit" class="bg-blue-500 text-white p-2 rounded">Submit</button>
    </form>
  </div>
</section>
<section>
  <h2 class="text-2xl font-bold mb-4">Employee List</h2>
  <div class="flex flex-wrap -mx-2">
    <% employees.forEach(employee => { %>
      <div class="w-full sm:w-1/2 px-2 mb-4">
        <div class="bg-white p-4 border rounded">
          <strong>Name:</strong> <%= employee.firstname %> <%= employee.lastname %><br>
          <strong>role:</strong> <%= employee.role %><br>
          <strong>Age:</strong> <%= employee.age %><br>
          <strong>Date of Birth:</strong> <%= employee.dob.toISOString().split('T')[0] %><br>
          <strong>Address:</strong> <%= employee.address %><br>
          <strong>Phone:</strong> <%= employee.phone %><br>
        </div>
      </div>
    <% }) %>
  </div>
  

</section>
